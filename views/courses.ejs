<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Courses | Skill Up</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    /* page-specific styles */
    body {
      background: linear-gradient(135deg, #eef3ff 0%, #dfe8ff 100%);
    }

    .course-section {
      min-height: calc(100vh - 8rem);   /* full page minus fixed header */
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 3rem 1rem;
      gap: 2rem;
    }

    .course-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem;
      width: 100%;
      max-width: 1200px;
    }

    .course-card {
      background: var(--brand);          /* navy blue */
      color: var(--text-light);          /* white */
      width: 260px;
      padding: 1.5rem 1.2rem;
      border-radius: .75rem;
      text-align: center;
      box-shadow: 0 4px 8px rgb(0 0 0 / .15);
      transition: transform .15s ease;
    }
    .course-card:hover { transform: translateY(-4px); }

    .course-code     { font-size: 1.1rem; font-weight: 700; }
    .course-title    { font-size: 1.25rem; margin: .4rem 0 .7rem; }
    .course-meta     { font-size: .95rem; line-height: 1.4; }
  </style>
</head>

<body>
  <%- include('partials/header') %>

  <main class="course-section">
    <h2>Our Courses</h2>

    <div class="course-grid">
      <% courses.forEach(c => { %>
        <div class="course-card">
          <div class="course-code"><%= c.code %></div>
          <div class="course-title"><%= c.title %></div>
          <div class="course-meta">
            Duration: <%= c.duration %><br>
            Price: Â£<%= c.price.toFixed(2) %>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
