<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Courses | Skill Up</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <%- include('partials/header') %>

  <main class="page courses">
    <h2>Our Courses</h2>

    <% if (courses.length === 0) { %>
      <p>No courses available yet.</p>
    <% } else { %>
      <table class="course-table" aria-label="course list">
  <thead>
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Duration</th>
      <th>Price (Â£)</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(c => { %>
      <tr>
        <td><%= c.code %></td>
        <td><%= c.title %></td>
        <td><%= c.duration %></td>
        <td><%= c.price.toFixed(2) %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

    <% } %>
  </main>
</body>
</html>
