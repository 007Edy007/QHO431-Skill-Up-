<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Instructors | Skill Up</title>
  <link rel="stylesheet" href="/css/styles.css">
  
</head>

<body class="instructors-bg">
  <%- include('partials/header') %>

  <main class="inst-section">
    <h2>Meet our Instructors</h2>

    <div class="inst-grid">
      <% instructors.forEach(i => { %>
        <div class="inst-card">
          <img src="/images/<%= i.photo %>" alt="Photo of <%= i.name %>">
          <div class="inst-body">
            <div class="inst-name"><%= i.name %></div>
            <p class="inst-bio"><%= i.bio %></p>
            <p class="inst-courses"><strong>Courses:</strong> <%= i.courses || 'â€”' %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
