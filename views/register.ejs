<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Register | Skill Up</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<style>
  body {
    background: linear-gradient(135deg, #eef3ff 0%, #dfe8ff 100%);
  }

  .page.register {
    min-height: calc(100vh - 8rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 1rem;
    gap: 2.5rem;
  }

  .reg-form input,
  .reg-form select,
  .reg-form textarea {
    width: 100%;
    max-width: 840px;
    padding: 0.9rem;
    font-size: 1.05rem;
    margin-bottom: 1rem;
  }

  .reg-form button {
    background: var(--brand);
    color: var(--text-light);
    border: none;
    padding: 0.9rem 2rem;
    font-size: 1.05rem;
    border-radius: 0.6rem;
    cursor: pointer;
  }
  .reg-form button:hover { opacity: 0.9; }
</style>

<body>
  <%- include('partials/header') %>

  <main class="page register">
    <h2>Student Registration</h2>

    <form action="/register" method="post" class="reg-form">
      <label>
        Name<br>
        <input type="text" name="name" required>
      </label><br><br>

      <label>
        Email<br>
        <input type="email" name="email" required>
      </label><br><br>

      <label>
        Phone<br>
        <input type="tel" name="phone">
      </label><br><br>

      <label>
        Select course(s) (Ctrl/Cmd-click for multiple)<br>
        <select name="courses[]" multiple required size="5">
          <% courses.forEach(c => { %>
            <option value="<%= c.code %>">
              <%= c.code %> – <%= c.title %> (£<%= c.price %>)
            </option>
          <% }) %>
        </select>
      </label><br><br>

      <button type="submit">Register</button>
    </form>
  </main>
</body>
</html>
